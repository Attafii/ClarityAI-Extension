{
  "name": "clarityai",
  "displayName": "ClarityAI - Prompt Improver for Copilot",
  "description": "Improves developer prompts by fixing grammar, spelling, and clarity before sending to Copilot",
  "version": "0.0.3",
  "publisher": "AhmedAttafii",
  "author": "Ahmed Attafi",
  "license": "MIT",
  "icon": "img/ClarityAI-logo.png",
  "keywords": [
    "copilot",
    "chat",
    "prompt",
    "clarity",
    "ai",
    "assistant",
    "grammar",
    "spelling",
    "improvement"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Attafii/ClarityAI-Extension.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "clarity",
        "name": "clarity",
        "description": "Improves your prompts before sending them to Copilot",
        "isSticky": false
      }
    ],
    "commands": [
      {
        "command": "clarity.forwardToCopilot",
        "title": "Send to Copilot"
      }
    ],
    "configuration": {
      "title": "Clarity",
      "properties": {
        "clarity.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google Gemini API key for prompt enhancement (required). Get yours at: https://aistudio.google.com/app/apikey"
        },
        "clarity.autoInjectContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject project context (framework, dependencies, current file) into prompts"
        },
        "clarity.showDiffView": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed comparison between original and enhanced prompts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test-gemini": "node -r ts-node/register src/test-gemini-integration.ts"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.11",
    "dotenv": "^17.2.2",
    "node-fetch": "^2.7.0"
  }
}
